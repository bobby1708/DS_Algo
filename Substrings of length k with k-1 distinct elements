#include <bits/stdc++.h>
using namespace std;
class Solution {
  public:
    int countOfSubstrings(string S, int K) {
        int l = 0, r = K - 1, n = S.size();
        
        map<char, int>mp;
        int uniq = 0, ans = 0;
        for(int i = 0; i < K; i++)
        {
            char c = S[i];
            if(mp[c] == 0)uniq++;
            mp[c]++;
        }
        if(uniq == K - 1) ans++;
        while(r + 1 < n)
        {
           
           if(mp[S[l]] == 1)
           {
               uniq--;
               
           }
           mp[S[l]]--;
           r++;
           l++;
           if(mp[S[r]] == 0)
           {
               uniq++;
           }
           mp[S[r]]++;
           if(uniq == K - 1) ans++;
        }
        
        return ans;
    }
};



int main() {
    int t;
    cin >> t;
    while (t--) {
        string S;
        int K;
        cin>>S;
        cin>>K;

        Solution ob;
        cout << ob.countOfSubstrings(S,K) << endl;
    }
    return 0;
}

